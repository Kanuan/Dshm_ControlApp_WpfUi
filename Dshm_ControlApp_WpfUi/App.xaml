<Application
    x:Class="Dshm_ControlApp_WpfUi.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wpf="clr-namespace:Nefarius.DsHidMini.ControlApp.Util.WPF"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <wpf:VisibilityPerHidModeConverter x:Key="VisibilityPerHIDModeConverterKey"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/GroupSettingsTemplates.xaml"/>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
