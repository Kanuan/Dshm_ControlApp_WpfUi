<Application
    x:Class="Dshm_ControlApp_WpfUi.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:Nefarius.DsHidMini.ControlApp.Helpers.WPF"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wpf="clr-namespace:Nefarius.DsHidMini.ControlApp.Util.WPF"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="NormalRumbleModeImage" UriSource="\Resources\NormalRumbleMode.png" />
            <BitmapImage x:Key="AltRumbleModeImage" UriSource="\Resources\AltRumbleMode.png" />
            <wpf:VisibilityPerHidModeConverter x:Key="VisibilityPerHIDModeConverterKey" />
            <helpers:BooleanToVisibilityConverter
                x:Key="BoolToVis_TC_FV"
                False="Visible"
                True="Collapsed" />
            <helpers:BooleanToVisibilityConverter
                x:Key="BoolToVis_TV_FC"
                False="Collapsed"
                True="Visible" />
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
